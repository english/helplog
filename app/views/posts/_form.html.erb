<%= form_for(@post, html: { class: 'form-horizontal'} ) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="row">
      <div class="col-offset-2 col-lg-10">
        <legend><%= params[:action].titleize %> Post</legend>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :title, class: 'col-lg-2 control-label' %>

      <div class="col-lg-10">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :body, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_area :body, rows: '30', class: 'form-control', placeholder: 'Body' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-offset-2 col-lg-10">
        <div class="checkbox">
          <%= f.label :published %>
          <%= f.check_box :published %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-offset-2 col-lg-10">
        <%= f.submit class: 'btn btn-default' %>
      </div>
    </div>
  </fieldset>
<% end %>

<%= form_tag sessions_path do %>
  <div class="input">
    <%= label_tag :email  %>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div class="input">
    <%= label_tag :password  %>
    <%= text_field_tag :password  %>
  </div>

  <div class="actions">
    <%= submit_tag 'Log in' %>
  </div>
<% end %>

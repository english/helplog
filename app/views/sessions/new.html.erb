<%= form_tag sessions_path, class: 'form-horizontal' do %>
  <div class="form-group">
    <%= label_tag :email, nil, class: 'col-lg-2 control-label'  %>
    <div class="col-lg-10">
      <%= email_field_tag :email, params[:email], class: 'form-control', placeholder: 'Email' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, nil, class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-offset-2 col-lg-10">
      <%= submit_tag 'Log in', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

<article class="post preview">
  <h2 class="title">
    {{#linkTo 'post' model}}{{title}}{{/linkTo}}
    <small class="pull-right">{{format-date updatedAt}}</small>
  </h2>
  <div class="intro">{{markdown intro}}</div>

  {{#if isLoggedIn}}
    {{#linkTo 'posts.edit' model class="btn btn-warning"}}Edit{{/linkTo}}
    <a {{action 'delete'}} class="btn btn-danger">Delete</a>
  {{/if}}
</article>

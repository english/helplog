<div class="row">
  <div role="main" class="col-lg-8">
    <h1>Latest Posts</h1>

    <section class="posts">
      {{#each post in posts}}
        <article class="post">
          <h1 class="title">{{#linkTo 'post' post}}{{post.title}}{{/linkTo}}</h1>
          <div class="intro">{{markdown post.intro}}</div>

          {{#if isLoggedIn}}
            {{#linkTo 'posts.edit' post class="btn btn-warning"}}Edit{{/linkTo}}
            <a {{action 'delete' post}} class="btn btn-danger">Delete</a>
          {{/if}}
        </article>
      {{/each}}
    </section>

    {{#if isLoggedIn}}
      <hr />
      {{#linkTo 'posts.new' class="btn btn-primary"}}New Post{{/linkTo}}
    {{/if}}
  </div>

  <div class="col-lg-4">
    {{partial "about"}}
  </div>
</div>

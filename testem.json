{
  "framework": "qunit",
  "launch_in_dev": [
    "phantomjs",
    "chrome",
    "firefox",
    "safari"
  ],
  "src_files": [
    "app/assets/javascripts/**/*.coffee",
    "test/javascripts/**/*.coffee"
  ],
  "serve_files": [
    "public/assets/*.js"
  ],
  "css_files": [
    "vendor/assets/stylesheets/bootstrap.css",
    "app/assets/stylesheets/application.css"
  ],
  "before_tests": "rm -rf public/assets && RAILS_ENV=test rake assets:precompile",
  "after_tests": "rm -rf public/assets"
}
